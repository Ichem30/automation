<style>
    .process {
        padding: 80px 0;
        background: var(--bg-secondary);
    }

    .process-cards {
        margin-bottom: 0;
    }


    .process-track {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.5rem;
        padding: 2rem 0;
        max-width: 1400px;
        margin: 0 auto;
    }

    .process-card {
        background: white;
        border-radius: 1rem;
        box-shadow: var(--shadow-light);
        border: 1px solid var(--border-color);
        transition: all 0.4s ease;
        min-height: 350px;
        position: relative;
        cursor: pointer;
        overflow: hidden;
    }

    .process-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--gradient-1);
        transform: scaleX(0);
        transition: transform 0.3s ease;
    }

    .process-card:hover::before,
    .process-card.active::before {
        transform: scaleX(1);
    }

    .process-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-large);
        border-color: var(--primary-color);
    }

    .process-card.active {
        transform: translateY(-5px);
        box-shadow: var(--shadow-large);
        border-color: var(--primary-color);
        z-index: 10;
        animation: focusPulse 2s ease-in-out infinite;
    }

    @keyframes focusPulse {
        0%, 100% {
            box-shadow: var(--shadow-large);
        }
        50% {
            box-shadow: 0 25px 35px -5px rgba(59, 130, 246, 0.25), 0 15px 15px -5px rgba(59, 130, 246, 0.1);
