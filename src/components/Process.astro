<script>
    document.addEventListener('DOMContentLoaded', function() {
        const cards = document.querySelectorAll('.process-card');
        
        let currentIndex = 0;
        const totalCards = cards.length; // 4 cartes
        
        function updateFocus() {
            console.log(`Focus sur carte: ${currentIndex}`);
            
            // Met à jour le focus sur les cartes
            cards.forEach((card, index) => {
                card.classList.toggle('active', index === currentIndex);
            });
        }
        
        function goToSlide(index) {
            // Gestion du bouclage infini
            if (index < 0) {
                currentIndex = totalCards - 1; // De -1 vers 3 (dernière carte)
            } else if (index >= totalCards) {
                currentIndex = 0; // De 4 vers 0 (première carte)
            } else {
                currentIndex = index;
            }
            updateFocus();
        }
        
        // Card clicks pour navigation
        cards.forEach((card, index) => {
            card.addEventListener('click', () => {
                goToSlide(index);
            });
        });
        
        // Keyboard navigation (optionnel)
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowLeft') {
                goToSlide(currentIndex - 1);
            } else if (e.key === 'ArrowRight') {
                goToSlide(currentIndex + 1);
            }
        });
        
        // Auto-play infini
        let autoPlay = setInterval(() => {
            goToSlide(currentIndex + 1);
        }, 3000);
        
        // Pause auto-play on hover
        const carousel = document.querySelector('.process-cards');
        carousel.addEventListener('mouseenter', () => {
            clearInterval(autoPlay);
        });
        
        carousel.addEventListener('mouseleave', () => {
            autoPlay = setInterval(() => {
                goToSlide(currentIndex + 1);
            }, 3000);
        });
        
        // Initialize
        updateFocus();
    });
</script>
