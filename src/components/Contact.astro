        border-radius: 0.5rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .trust-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.8rem;
        color: var(--text-light);
    }

    .trust-item i {
        color: var(--primary-color);
        font-size: 0.9rem;
    }

