<section id="contact" class="contact">
    <div class="container">
        <div class="contact-content">
            <div class="contact-info">
                <h2>Prêt à automatiser vos processus ?</h2>
                <p>Discutons de votre projet et découvrons ensemble comment l'IA peut transformer votre entreprise.</p>
                
                <div class="audit-offer">
                    <div class="audit-badge">
                        <i class="fas fa-gift"></i>
                        <span>GRATUIT</span>
                    </div>
                    <h3>Audit Gratuit (valeur 200€)</h3>
                    <p>Analyse complète + plan d'action personnalisé en 48h</p>
                </div>

                <div class="calendly-cta">
                    <div class="calendly-content">
                        <div class="calendly-icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <div class="calendly-text">
                            <h3>Préférez un appel direct ?</h3>
                            <p>Réservez un créneau de 30 minutes pour discuter de votre projet</p>
                        </div>
                    </div>
                    <a href="https://calendly.com/autoflowai" target="_blank" class="btn btn-calendly">
                        <i class="fas fa-video"></i>
                        Réserver un appel
                    </a>
                </div>

                <div class="contact-features">
                    <div class="contact-feature">
                        <i class="fas fa-calendar-check"></i>
                        <div>
                            <h4>Consultation gratuite</h4>
                            <p>Analysons vos besoins sans engagement</p>
                        </div>
                    </div>
                    <div class="contact-feature">
                        <i class="fas fa-rocket"></i>
                        <div>
                    <h4>Démarrage rapide</h4>
                    <p>Premiers résultats en 1-2 semaines</p>
                        </div>
                    </div>
                    <div class="contact-feature">
                        <i class="fas fa-headset"></i>
                        <div>
                            <h4>Support dédié</h4>
                            <p>Accompagnement personnalisé + garantie 30 jours</p>
                        </div>
                    </div>
                </div>
                
                <div class="contact-methods">
                    <h4>Autres moyens de contact</h4>
                    <div class="methods-grid">
                        <a href="mailto:contact@autoflowai.fr" class="method">
                            <i class="fas fa-envelope"></i>
                            <span>contact@autoflowai.fr</span>
                        </a>
                        <a href="#" class="method">
                            <i class="fab fa-linkedin"></i>
                            <span>LinkedIn</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="contact-form">
                <div class="form-header">
                    <h3>Obtenez votre audit gratuit</h3>
                    <p>Remplissez ce formulaire pour recevoir votre analyse personnalisée en 24h</p>
                    <div class="progress-bar">
                        <div class="progress-fill" id="progressFill"></div>
                    </div>
                    <span class="progress-text" id="progressText">Étape 1/4 - Informations de base</span>
                </div>
                
                <form id="contactForm">
                    <!-- Étape 1: Informations de base -->
                    <div class="form-step active" data-step="1">
                        <div class="form-group">
                            <label for="name">Nom complet *</label>
                            <input type="text" id="name" name="name" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email professionnel *</label>
                            <input type="email" id="email" name="email" required>
                        </div>
                        <div class="form-group">
                            <label for="company">Entreprise *</label>
                            <input type="text" id="company" name="company" required>
                        </div>
                        <div class="form-group">
                            <label for="phone">Téléphone</label>
                            <input type="tel" id="phone" name="phone">
                        </div>
                    </div>

                    <!-- Étape 2: Contexte métier -->
                    <div class="form-step" data-step="2">
                        <div class="form-group">
                            <label for="sector">Secteur d'activité *</label>
                            <select id="sector" name="sector" required>
                                <option value="">Sélectionnez votre secteur</option>
                                <option value="ecommerce">E-commerce</option>
                                <option value="saas">SaaS / Tech</option>
                                <option value="consulting">Consulting</option>
                                <option value="finance">Finance / Banque</option>
                                <option value="healthcare">Santé</option>
                                <option value="education">Éducation</option>
                                <option value="realestate">Immobilier</option>
                                <option value="other">Autre</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="companySize">Taille de l'entreprise *</label>
                            <select id="companySize" name="companySize" required>
                                <option value="">Sélectionnez</option>
                                <option value="1-10">1-10 employés</option>
                                <option value="11-50">11-50 employés</option>
                                <option value="51-200">51-200 employés</option>
                                <option value="200+">200+ employés</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="currentTools">Outils actuels (sélectionnez tous ceux qui s'appliquent)</label>
                            <div class="checkbox-grid">
                                <label class="checkbox-label">
                                    <input type="checkbox" name="currentTools" value="crm">
                                    CRM (Salesforce, HubSpot, etc.)
                                </label>
                                <label class="checkbox-label">
                                    <input type="checkbox" name="currentTools" value="email">
                                    Email (Gmail, Outlook)
                                </label>
                                <label class="checkbox-label">
                                    <input type="checkbox" name="currentTools" value="slack">
                                    Slack / Teams
                                </label>
                                <label class="checkbox-label">
                                    <input type="checkbox" name="currentTools" value="sheets">
                                    Google Sheets / Excel
                                </label>
                                <label class="checkbox-label">
                                    <input type="checkbox" name="currentTools" value="shopify">
                                    Shopify / WooCommerce
                                </label>
                                <label class="checkbox-label">
                                    <input type="checkbox" name="currentTools" value="other">
                                    Autre
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Étape 3: Besoins et défis -->
                    <div class="form-step" data-step="3">
                        <div class="form-group">
                            <label for="challenge">Quel est votre plus gros défi actuel ? *</label>
                            <select id="challenge" name="challenge" required>
                                <option value="">Sélectionnez votre défi principal</option>
                                <option value="time">Manque de temps / Tâches répétitives</option>
                                <option value="data">Gestion des données / Synchronisation</option>
                                <option value="communication">Communication client / Support</option>
                                <option value="reporting">Rapports / Analytics</option>
                                <option value="integration">Intégration d'outils</option>
                                <option value="other">Autre</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="processes">Quels processus souhaitez-vous automatiser ? *</label>
                            <div class="checkbox-grid">
                                <label class="checkbox-label">
                                    <input type="checkbox" name="processes" value="leads">
                                    Qualification de leads
                                </label>
                                <label class="checkbox-label">
                                    <input type="checkbox" name="processes" value="support">
                                    Support client
                                </label>
                                <label class="checkbox-label">
                                    <input type="checkbox" name="processes" value="content">
                                    Génération de contenu
                                </label>
                                <label class="checkbox-label">
                                    <input type="checkbox" name="processes" value="reports">
                                    Rapports automatisés
                                </label>
                                <label class="checkbox-label">
                                    <input type="checkbox" name="processes" value="emails">
                                    Campagnes email
                                </label>
                                <label class="checkbox-label">
                                    <input type="checkbox" name="processes" value="other">
                                    Autre
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="timeLost">Combien d'heures perdez-vous par semaine sur ces tâches ?</label>
                            <select id="timeLost" name="timeLost">
                                <option value="">Sélectionnez</option>
                                <option value="1-5">1-5 heures</option>
                                <option value="6-15">6-15 heures</option>
                                <option value="16-30">16-30 heures</option>
                                <option value="30+">30+ heures</option>
                            </select>
                        </div>
                    </div>

                    <!-- Étape 4: Budget et timeline -->
                    <div class="form-step" data-step="4">
                        <div class="form-group">
                            <label for="budget">Budget estimé *</label>
                            <select id="budget" name="budget" required>
                                <option value="">Sélectionnez votre budget</option>
                                <option value="1k-5k">1 000€ - 5 000€</option>
                                <option value="5k-10k">5 000€ - 10 000€</option>
                                <option value="10k-25k">10 000€ - 25 000€</option>
                                <option value="25k+">25 000€+</option>
                                <option value="discuss">À discuter</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="timeline">Quand souhaitez-vous démarrer ? *</label>
                            <select id="timeline" name="timeline" required>
                                <option value="">Sélectionnez</option>
                                <option value="urgent">Urgent (< 2 semaines)</option>
                                <option value="normal">Normal (2-4 semaines)</option>
                                <option value="flexible">Flexible (> 1 mois)</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="project">Décrivez brièvement votre projet *</label>
                            <textarea id="project" name="project" rows="3" placeholder="Décrivez vos besoins spécifiques et vos objectifs..." required></textarea>
                        </div>
                    </div>

                    <!-- Boutons de navigation -->
                    <div class="form-navigation">
                        <button type="button" class="btn btn-secondary" id="prevBtn" style="display: none;">
                            <i class="fas fa-arrow-left"></i>
                            Précédent
                        </button>
                        <button type="button" class="btn btn-primary" id="nextBtn">
                            Suivant
                            <i class="fas fa-arrow-right"></i>
                        </button>
                        <button type="submit" class="btn btn-primary" id="submitBtn" style="display: none;">
                            <i class="fas fa-gift"></i>
                            Obtenir mon audit gratuit
                        </button>
                    </div>

                    <!-- Éléments de confiance -->
                    <div class="trust-elements">
                        <div class="trust-item">
                            <i class="fas fa-shield-alt"></i>
                            <span>Vos données sont 100% sécurisées</span>
                        </div>
                        <div class="trust-item">
                            <i class="fas fa-clock"></i>
                            <span>Réponse garantie sous 24h</span>
                        </div>
                        <div class="trust-item">
                            <i class="fas fa-ban"></i>
                            <span>Aucun spam, désinscription facile</span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-brand">
                    <div class="footer-logo">
                        <i class="fas fa-bolt"></i>
                        <span>AutoFlow<span class="accent">AI</span></span>
                    </div>
                    <p>Expert freelance en automatisation IA avec n8n. Transformez vos processus métier avec l'intelligence artificielle.</p>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                        <a href="#"><i class="fab fa-github"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
                <div class="footer-links">
                    <div class="footer-column">
                        <h4>Services</h4>
                        <ul>
                            <li><a href="#services">Workflows IA Intelligents</a></li>
                            <li><a href="#services">Automatisation Complète</a></li>
                            <li><a href="#services">Analytics & Reporting</a></li>
                            <li><a href="#contact">Audit Gratuit</a></li>
                        </ul>
                    </div>
                    <div class="footer-column">
                        <h4>Solutions</h4>
                        <ul>
                            <li><a href="#portfolio">Chatbots IA</a></li>
                            <li><a href="#portfolio">Générateur de Devis</a></li>
                            <li><a href="#portfolio">Agent Téléphonique</a></li>
                            <li><a href="#portfolio">Marketing Intelligence</a></li>
                        </ul>
                    </div>
                    <div class="footer-column">
                        <h4>Ressources</h4>
                        <ul>
                            <li><a href="#portfolio">FAQ</a></li>
                            <li><a href="#process">Mon Processus</a></li>
                            <li><a href="#portfolio">Cas d'usage</a></li>
                            <li><a href="#contact">Contact</a></li>
                        </ul>
                    </div>
                    <div class="footer-column">
                        <h4>Contact</h4>
                        <ul>
                            <li><a href="mailto:contact@autoflowai.fr">contact@autoflowai.fr</a></li>
                            <li><a href="tel:+33123456789">+33 1 23 45 67 89</a></li>
                            <li>Paris, France</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 AutoFlowAI. Tous droits réservés.</p>
                <div class="footer-legal">
                    <a href="#">Mentions légales</a>
                    <a href="#">Confidentialité</a>
                    <a href="#">CGV</a>
                </div>
            </div>
        </div>
    </footer>
</section>

