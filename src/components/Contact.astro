<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('contactForm');
        const steps = document.querySelectorAll('.form-step');
        const progressFill = document.getElementById('progressFill');
        const progressText = document.getElementById('progressText');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const submitBtn = document.getElementById('submitBtn');
        
        let currentStep = 1;
        const totalSteps = 4;
        
        const stepTitles = [
            'Étape 1/4 - Informations de base',
            'Étape 2/4 - Contexte métier',
            'Étape 3/4 - Besoins et défis',
            'Étape 4/4 - Budget et timeline'
        ];
        
        // Configuration des champs obligatoires par étape
        const requiredFieldsByStep = {
            1: ['name', 'email', 'company'],
            2: ['sector', 'companySize'],
            3: ['challenge', 'processes'],
            4: ['budget', 'timeline', 'project']
        };
        
        // Fonctions utilitaires
        function updateProgress() {
            const progress = (currentStep / totalSteps) * 100;
            progressFill.style.width = progress + '%';
            progressText.textContent = stepTitles[currentStep - 1];
        }
        
        function showStep(step) {
            steps.forEach((s, index) => {
                s.classList.toggle('active', index + 1 === step);
            });
            
            prevBtn.style.display = step > 1 ? 'flex' : 'none';
            nextBtn.style.display = step < totalSteps ? 'flex' : 'none';
            submitBtn.style.display = step === totalSteps ? 'flex' : 'none';
            
            updateProgress();
            validateCurrentStep();
        }
        
        function clearErrors() {
            // Supprimer tous les messages d'erreur
            const errorMessages = document.querySelectorAll('.error-message');
            errorMessages.forEach(msg => msg.remove());
            
            // Supprimer les classes d'erreur des champs
            const errorFields = document.querySelectorAll('.form-group input.error, .form-group select.error, .form-group textarea.error');
            errorFields.forEach(field => field.classList.remove('error'));
        }
        
        function showError(field, message) {
            // Supprimer l'ancien message d'erreur pour ce champ
            const existingError = field.parentNode.querySelector('.error-message');
            if (existingError) {
                existingError.remove();
            }
            
            // Ajouter la classe d'erreur au champ
            field.classList.add('error');
            
            // Créer et afficher le message d'erreur
            const errorDiv = document.createElement('div');
            errorDiv.className = 'error-message';
            errorDiv.textContent = message;
            field.parentNode.appendChild(errorDiv);
        }
        
        function validateField(field) {
            const value = field.value.trim();
            const fieldName = field.name;
            
            // Supprimer l'erreur précédente
            field.classList.remove('error');
            const existingError = field.parentNode.querySelector('.error-message');
            if (existingError) {
                existingError.remove();
            }
            
            // Validation des formats seulement (pas de validation obligatoire)
            if (fieldName === 'email' && value && !isValidEmail(value)) {
                showError(field, 'Format d\'email invalide');
                return false;
            }
            
            if (fieldName === 'phone' && value && !isValidPhoneNumber(value)) {
                showError(field, 'Format de téléphone invalide');
                return false;
            }
            
            if (fieldName === 'name' && value && !isValidName(value)) {
                showError(field, 'Le nom doit contenir au moins 2 caractères');
                return false;
            }
            
            if (fieldName === 'company' && value && !isValidCompany(value)) {
                showError(field, 'Le nom de l\'entreprise doit contenir au moins 2 caractères');
                return false;
            }
            
            if (fieldName === 'project' && value && !isValidProjectDescription(value)) {
                showError(field, 'La description doit contenir au moins 10 caractères');
                return false;
            }
            
            return true;
        }
        
        function validateCurrentStep() {
            clearErrors();
            
            const requiredFields = requiredFieldsByStep[currentStep];
            let isValid = true;
            
            // Vérifier d'abord si les champs obligatoires sont remplis
            requiredFields.forEach(fieldName => {
                const field = document.querySelector(`[name="${fieldName}"]`);
                if (field && !field.value.trim()) {
                    isValid = false;
                }
            });
            
            // Validation spéciale pour les checkboxes (processes)
            if (currentStep === 3) {
                const processCheckboxes = document.querySelectorAll('input[name="processes"]:checked');
                if (processCheckboxes.length === 0) {
                    isValid = false;
                }
            }
            
            // Si les champs obligatoires sont remplis, vérifier les formats
            if (isValid) {
                requiredFields.forEach(fieldName => {
                    const field = document.querySelector(`[name="${fieldName}"]`);
                    if (field) {
                        if (!validateField(field)) {
                            isValid = false;
                        }
                    }
                });
                
                // Validation du format téléphone sur toutes les étapes
                const phoneField = document.querySelector('input[name="phone"]');
                if (phoneField && phoneField.value.trim()) {
                    if (!validateField(phoneField)) {
                        isValid = false;
                    }
                }
            }
            
            // Mettre à jour l'état du bouton
            updateButtonState(isValid);
            
            return isValid;
        }
        
        function updateButtonState(isValid) {
            if (nextBtn.style.display !== 'none') {
                nextBtn.disabled = !isValid;
                nextBtn.style.opacity = isValid ? '1' : '0.5';
                nextBtn.style.cursor = isValid ? 'pointer' : 'not-allowed';
            }
            
            if (submitBtn.style.display !== 'none') {
                submitBtn.disabled = !isValid;
                submitBtn.style.opacity = isValid ? '1' : '0.5';
                submitBtn.style.cursor = isValid ? 'pointer' : 'not-allowed';
            }
        }
        
        // Fonctions de validation des formats
        function isValidEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }
        
        function isValidPhoneNumber(phone) {
            const phoneRegex = /^(?:\+33|0)[1-9](?:[0-9]{8})$/;
            const cleanPhone = phone.replace(/[\s.-]/g, '');
            return phoneRegex.test(cleanPhone);
        }
        
        function isValidName(name) {
            return name.length >= 2 && /^[a-zA-ZÀ-ÿ\s'-]+$/.test(name);
        }
        
        function isValidCompany(company) {
            return company.length >= 2;
        }
        
        function isValidProjectDescription(project) {
            return project.length >= 10;
        }
        
        function sanitizeInput(input) {
            if (!input) return '';
            return input
                .replace(/[<>"'&]/g, '') // Supprimer les caractères dangereux
                .substring(0, 1000) // Limiter la longueur
                .trim();
        }
        
        // Événements des boutons
        nextBtn.addEventListener('click', function() {
            if (validateCurrentStep()) {
                currentStep++;
                showStep(currentStep);
            }
        });
        
        prevBtn.addEventListener('click', function() {
            currentStep--;
            showStep(currentStep);
        });
        
        // Validation en temps réel
        document.addEventListener('input', function(e) {
            if (e.target.matches('input, select, textarea')) {
                validateField(e.target);
                validateCurrentStep();
            }
        });
        
        document.addEventListener('change', function(e) {
            if (e.target.matches('input[type="checkbox"], select')) {
                validateCurrentStep();
            }
        });
        
        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            if (!validateCurrentStep()) {
                return;
            }
            
            // Get form data
            const formData = new FormData(form);
            const data = Object.fromEntries(formData);
            
            // Nettoyer et valider toutes les données
            data.name = sanitizeInput(data.name || '');
            data.email = sanitizeInput(data.email || '');
            data.company = sanitizeInput(data.company || '');
            data.phone = sanitizeInput(data.phone || '');
            data.sector = sanitizeInput(data.sector || '');
            data.companySize = sanitizeInput(data.companySize || '');
            data.challenge = sanitizeInput(data.challenge || '');
            data.timeLost = sanitizeInput(data.timeLost || '');
            data.budget = sanitizeInput(data.budget || '');
            data.timeline = sanitizeInput(data.timeline || '');
            data.project = sanitizeInput(data.project || '');
            
            // Collect checkbox values properly
            const currentTools = Array.from(document.querySelectorAll('input[name="currentTools"]:checked')).map(cb => sanitizeInput(cb.value));
            const processes = Array.from(document.querySelectorAll('input[name="processes"]:checked')).map(cb => sanitizeInput(cb.value));
            
            data.currentTools = currentTools;
            data.processes = processes;
            data.timestamp = new Date().toLocaleString('fr-FR');
            data.source = 'AutoFlowAI Contact Form';
            
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Envoi en cours...';
            submitBtn.disabled = true;
            
            try {
                // Configuration Mailgun
                const mailgunData = {
                    from: 'AutoFlowAI <noreply@autoflowai.com>',
                    to: ['Ino Mibz <inomibz@gmail.com>'],
                    subject: `Nouveau Lead AutoFlowAI - ${data.name}`,
                    html: `
                        <div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto; padding: 20px; background: #f8fafc;">
                            <div style="background: white; padding: 30px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                                <h2 style="color: #3b82f6; margin-bottom: 20px;">🎯 Nouveau Lead AutoFlowAI</h2>
                                
                                <div style="background: #f0f9ff; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
                                    <h3 style="color: #1e40af; margin: 0 0 10px 0;">📋 Informations de base</h3>
                                    <p><strong>Nom :</strong> ${data.name}</p>
                                    <p><strong>Email :</strong> ${data.email}</p>
                                    <p><strong>Entreprise :</strong> ${data.company}</p>
                                    <p><strong>Téléphone :</strong> ${data.phone || 'Non renseigné'}</p>
                                </div>
                                
                                <div style="background: #f0fdf4; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
                                    <h3 style="color: #166534; margin: 0 0 10px 0;">🏢 Contexte métier</h3>
                                    <p><strong>Secteur :</strong> ${data.sector}</p>
                                    <p><strong>Taille entreprise :</strong> ${data.companySize}</p>
                                    <p><strong>Outils actuels :</strong> ${currentTools.length > 0 ? currentTools.join(', ') : 'Aucun sélectionné'}</p>
                                </div>
                                
                                <div style="background: #fef3c7; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
                                    <h3 style="color: #92400e; margin: 0 0 10px 0;">🎯 Besoins et défis</h3>
                                    <p><strong>Défi principal :</strong> ${data.challenge}</p>
                                    <p><strong>Processus à automatiser :</strong> ${processes.length > 0 ? processes.join(', ') : 'Aucun sélectionné'}</p>
                                    <p><strong>Temps perdu/semaine :</strong> ${data.timeLost || 'Non renseigné'}</p>
                                </div>
                                
                                <div style="background: #fce7f3; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
                                    <h3 style="color: #be185d; margin: 0 0 10px 0;">💰 Budget et timeline</h3>
                                    <p><strong>Budget estimé :</strong> ${data.budget}</p>
                                    <p><strong>Timeline :</strong> ${data.timeline}</p>
                                    <p><strong>Description projet :</strong><br>${data.project}</p>
                                </div>
                                
                                <div style="background: #f3f4f6; padding: 15px; border-radius: 8px; text-align: center;">
                                    <p style="margin: 0; color: #6b7280; font-size: 14px;">
                                        <strong>Source :</strong> ${data.source} | 
                                        <strong>Date :</strong> ${data.timestamp}
                                    </p>
                                </div>
                            </div>
                        </div>
                    `,
                    text: `
=== NOUVEAU LEAD AUTOWFLOWAI ===
SOURCE: ${data.source}
DATE: ${data.timestamp}
URL: ${window.location.href}

--- INFORMATIONS PERSONNELLES ---
Nom: ${data.name}
Email: ${data.email}
Entreprise: ${data.company}
Téléphone: ${data.phone || 'Non renseigné'}

--- CONTEXTE MÉTIER ---
Secteur: ${data.sector}
Taille entreprise: ${data.companySize}
Outils actuels: ${currentTools.join(', ')}

--- BESOINS IDENTIFIÉS ---
Défi principal: ${data.challenge}
Processus à automatiser: ${processes.join(', ')}
Temps perdu/semaine: ${data.timeLost || 'Non renseigné'}

--- BUDGET ET TIMELINE ---
Budget estimé: ${data.budget}
Timeline: ${data.timeline}
Description projet: ${data.project}
                    `
                };
                
                // Envoi via Mailgun API
                const response = await fetch(`https://api.mailgun.net/v3/${import.meta.env.PUBLIC_MAILGUN_DOMAIN}/messages`, {
                    method: 'POST',
                    headers: {
                        'Authorization': 'Basic ' + btoa('api:' + import.meta.env.PUBLIC_MAILGUN_API_KEY),
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: new URLSearchParams(mailgunData)
                });
                
                if (response.ok) {
                    alert('Merci ! Votre audit gratuit sera envoyé sous 24h. Vérifiez vos emails !');
                    form.reset();
                    currentStep = 1;
                    showStep(currentStep);
                } else {
                    const errorText = await response.text();
                    console.error('Erreur Mailgun:', errorText);
                    throw new Error('Erreur lors de l\'envoi: ' + errorText);
                }
            } catch (error) {
                console.error('Erreur détaillée:', error);
                alert(`Erreur: ${error.message}. Vérifiez la console pour plus de détails.`);
            } finally {
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            }
        });
        
        // Initialisation
        showStep(1);
    });
</script> 